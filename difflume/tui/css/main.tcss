VerticalScroll {
    width: 1fr;
    border: solid darkred;
}

VerticalScroll:focus {
    border: solid $accent;
}

VerticalScroll.fullscreen {
    border: none;
}

.disabled {
    display: none;
}

.centered {
    content-align: center top;
}

ErrorScreen Static {
    border: solid darkred;
    width: 100%;
    height: 100%;
}

Modal {
    align: center middle;
}

#select-file-modal {
    margin: 0 1;
    width: 30%;
    height: 50%;
    border: solid darkred;
    background: $surface;
}
